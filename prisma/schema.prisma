// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Users {
  id        Int      @id() @default(autoincrement())
  username  String   @unique()
  password  String   @db.VarChar
  accountId Int      @db.Integer
  account   Accounts @relation(fields: [accountId], references: [id])

  @@map("users")
}

model Accounts {
  id              Int            @id() @default(autoincrement())
  balance         Int            @db.Integer
  Users           Users[]
  debitedAccount  Transactions[] @relation(name: "debitedAccount")
  creditedAccount Transactions[] @relation(name: "creditedAccount")

  @@map("accounts")
}

model Transactions {
  id                Int       @id() @default(autoincrement())
  value             Int       @db.Integer
  debitedAccountId  Int       @db.Integer
  debitedAccount    Accounts? @relation("debitedAccount", fields: [debitedAccountId], references: [id])
  creditedAccountId Int
  creditedAccount   Accounts? @relation("creditedAccount", fields: [creditedAccountId], references: [id])

  @@map("transactions")
}
